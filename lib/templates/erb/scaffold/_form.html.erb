<div class="card">
  <div class="content">
    <%%= form_for([:admin, <%= singular_table_name %>], local: true) do |form| %>
      <%% if <%= singular_table_name %>.errors.any? %>
        <div id="error_explanation">
          <h2><%%= pluralize(<%= singular_table_name %>.errors.count, "error") %> prohibited this <%= singular_table_name %> from being saved:</h2>

          <ul>
          <%% <%= singular_table_name %>.errors.full_messages.each do |message| %>
            <li class="alert alert-danger"><%%= message %></li>
          <%% end %>
          </ul>
        </div>
      <%% end %>

      <div class="row">
        <%- attributes.each do |attribute| -%>
          <div class="col-md-5">
            <div class="form-group">
              <%%= form.label :<%= attribute.name %> %>
              <%%= form.text_field :<%= attribute.name %>, class: "form-control" %>
            </div>
          </div>
        <%- end -%>

      <div class="actions">
        <%%= form.submit class: 'btn btn-primary btn-fill' %>
        <%%= link_to t('back'), admin_<%= singular_table_name%>s_path, class: 'btn btn-primary btn-fill' %>
      </div>
    <%% end %>
  </div>
</div>
