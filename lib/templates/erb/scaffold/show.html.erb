<h1><%%= t('activerecord.models.<%= singular_table_name %>') %><%%= t('show') %></h1>

<%%- if notice.present? %>
  <p class="alert alert-success" id="notice"><%%= notice %></p>
<%% end %>

<div class="card card-user">
  <div class="content mx-auto">
    <% for attribute in attributes -%>
      <p>
        <strong><%%= <%= singular_table_name%>.human_attribute_name(:<%=attribute.name%>) %>:</strong>
        <%%= @<%= singular_table_name %>.<%= attribute.name%> %>
      </p>
    <% end %>

    <div class="actions text-center">
      <%%= link_to t('edit'), edit_admin_<%= singular_table_name%>_path(@<%= singular_table_name%>), class: 'btn btn-info btn-fill' %> |
      <%%= link_to t('back'), admin_<%= singular_table_name%>s_path, class: 'btn btn-info btn-fill' %>
    </div>
  </div>
</div>

<style type="text/css">
  p {
    margin: 30px 0;
  }
</style>
