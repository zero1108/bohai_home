<%- if notice.present? %>
  <p class="alert alert-success" id="notice"><%= notice %></p>
<% end %>

<h1><%= t('activerecord.models.course')%>列表</h1>

<div class="row">
  <div class="col-md-12">
      <div class="card">
        <div class="header">
          <%= link_to t('new'), new_admin_course_path, class: 'btn btn-success btn-fill pull-right' %>
        </div>
          <div class="content table-responsive table-full-width">
              <table class="table table-hover table-striped">
                  <thead>
                    <th><%= Course.human_attribute_name(:name)%></th>
                    <th><%= Course.human_attribute_name(:price)%></th>
                    <th><%= Course.human_attribute_name(:introduction)%></th>
                    <th><%= Course.human_attribute_name(:position)%></th>
                    <th><%= Course.human_attribute_name(:state)%></th>
                    <th colspan="3"><%= t('actions')%></th>
                  </thead>
                  <tbody>
                    <% @courses.each do |course| %>
                      <tr>
                        <td><%= course.name %></td>
                        <td><%= course.price %></td>
                        <td><%= course.introduction %></td>
                        <td><%= course.position %></td>
                        <td><%= course.state %></td>
                        <td><%= link_to t('show'), [:admin, course] %>
                            <%= link_to t('edit'), edit_admin_course_path(course) %>
                            <%= link_to t('destroy'), [:admin, course], method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>

          </div>
      </div>
  </div>
</div>
