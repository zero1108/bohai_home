<h1><%= t('activerecord.models.statement') %><%= t('show') %></h1>

<%- if notice.present? %>
  <p class="alert alert-success" id="notice"><%= notice %></p>
<% end %>

<div class="card card-user">
  <div class="content mx-auto">
          <p>
        <strong><%= Statement.human_attribute_name(:price) %>:</strong>
        <%= @statement.price %>
      </p>
          <p>
        <strong><%= Statement.human_attribute_name(:content) %>:</strong>
        <%= @statement.content %>
      </p>
          <p>
        <strong><%= Statement.human_attribute_name(:type) %>:</strong>
        <%= @statement.type_name %>
      </p>
    

    <div class="actions text-center">
      <%= link_to t('edit'), edit_admin_statement_path(@statement), class: 'btn btn-info btn-fill' %> |
      <%= link_to t('back'), admin_statements_path, class: 'btn btn-info btn-fill' %>
    </div>
  </div>
</div>

<style type="text/css">
  p {
    margin: 30px 0;
  }
</style>
