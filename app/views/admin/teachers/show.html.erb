<h1><%= t('activerecord.models.teacher') %><%= t('show') %></h1>

<%- if notice.present? %>
  <p class="alert alert-success" id="notice"><%= notice %></p>
<% end %>

<div class="card card-user">
  <div class="content mx-auto">
      <p class="text-center">
        <%= image_tag(@teacher.avatar, width: '150', class: 'avatar border-gray') %>
      </p>

      <p class="text-center">
        <%= @teacher.name %>
      </p>

      <p class="text-center">
        <%= @teacher.birthday %>
      </p>

      <p class="text-center text-area">
        <strong><%= Teacher.human_attribute_name(:introduction) %>:</strong>
        <%= @teacher.introduction %>
      </p>

      <p class="text-center text-area">
        <strong><%= Teacher.human_attribute_name(:achievements) %>:</strong>
        <%= @teacher.achievements %>
      </p>
    <div class="actions text-center">
      <%= link_to t('edit'), edit_admin_teacher_path(@teacher), class: 'btn btn-info btn-fill' %> |
      <%= link_to t('back'), admin_teachers_path, class: 'btn btn-info btn-fill' %>
    </div>
  </div>
</div>

<style type="text/css">
  p {
    margin: 30px 0;
  }

  .text-area {
    padding: 5px 200px;
  }
</style>