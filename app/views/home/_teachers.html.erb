<h1 class="text-center text-uppercase text-white">师资介绍</h1>
<hr class="star-light mb-5">
<div class="teachers">
  <% @teachers.each do |teacher|%>
    <div class="row card card-user text-center">
      <%= image_tag(teacher.avatar, class: 'avatar')%>
      <h4 class="title"><%= teacher.name %></h4>
      <br>
      <p class="description"><%= teacher.introduction %></p>
      <div class="achievements col-md-offset-5">
        <%= simple_format(h(teacher.achievements)) %>
      </div>
    </div>
  <% end %>
</div>

<style type="text/css">
  .teachers {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
  }
  .avatar {
    margin-top: 10px;
  }
  .card-user {
    flex: 1;
    margin: 10px 20px;
    height: 480px;
  }
  .card-user:hover {
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
    -webkit-transition: all .3s ease-in-out;
    -moz-transition: all .3s ease-in-out;
    -ms-transition: all .3s ease-in-out;
    -o-transition: all .3s ease-in-out;
    transition: all .3s ease-in-out
  }
  .description {
    padding: 0 20px;
    text-indent: 35px;
    text-align: left;
  }

  .achievements {
    margin-top: 40px;
    padding: 0 20px;
    text-align: left;
  }
</style>